<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_normal2"
        android:paddingLeft="@dimen/padding_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ht_servicefree_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/servicefree"
                android:textColor="#f5073f"
                android:textStyle="bold"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_service_fee"
                android:layout_toLeftOf="@id/ht_servicefree_make"
                android:text="@string/servicefree"
                android:textStyle="bold"
                android:textColor="#f5073f"
                android:textSize="@dimen/text_small_body" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#6e6d6d"
            android:id="@+id/text_note_make"
            android:textSize="@dimen/text_small_xx_body"
            android:text="@string/note"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_normal1"
            android:paddingLeft="@dimen/padding_normal1"
            android:text="@string/offerfree"
            android:textColor="#555555"
            android:textStyle="bold"
            android:textSize="@dimen/text_small_body" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal1">

            <TextView
                android:id="@+id/ht_buyer_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_buyer_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_offer_buy_fee"
                android:gravity="right"
                android:layout_toLeftOf="@id/ht_buyer_fee"
                android:hint="@string/order_buyer_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#FFF"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal1">

            <TextView
                android:id="@+id/ht_ship_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_ship_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_offer_ship_fee"
                android:layout_toLeftOf="@id/ht_ship_fee"
                android:hint="@string/order_ship_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#FFF"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal1">

            <TextView
                android:id="@+id/tv_offer_sales_tax_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_surcharge_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_offer_surcharge_fee"
                android:layout_toLeftOf="@id/tv_offer_sales_tax_title"
                android:hint="@string/order_surcharge_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#FFF"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal1">

            <TextView
                android:id="@+id/ht_order_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_other_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="text"
                android:id="@+id/tv_offer_other_fee"
                android:layout_toLeftOf="@id/ht_order_fee"
                android:hint="@string/order_other_fee"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#FFF"
            android:orientation="horizontal"
            android:padding="@dimen/padding_normal1">

            <TextView
                android:id="@+id/tv_add_avg_fee_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_avg"
                android:textColor="#000"
                android:textSize="@dimen/text_small_body" />
            <Switch
                android:id="@+id/btn_offer_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_normal"
                android:checked="true"
                android:thumb="@drawable/thumb_selector"
                android:track="@drawable/track_selector" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal1"
        android:text="@string/order_detail_delivery_date_title"
        android:textSize="@dimen/text_small_body" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="@dimen/padding_normal">

        <TextView
            android:id="@+id/tv_offer_delivery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="@dimen/text_small_body" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_offer_delivery_date"
            android:text="@string/order_delivery_date"
            android:textColor="#999999"
            android:textSize="@dimen/text_small_body" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_offer_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_normal"
        android:background="@drawable/white_background"
        android:padding="@dimen/padding_normal1"
        android:text="@string/order_text_note"
        android:textColor="#999999"
        android:textSize="@dimen/text_small_body" />






</LinearLayout>