<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_normal"
            android:paddingBottom="@dimen/padding_normal1"
            android:paddingLeft="@dimen/padding_normal1"
            android:text="@string/order_total_price"
            android:textColor="#555555"
            android:textStyle="bold"
            android:textSize="@dimen/text_small_body" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal1">

            <TextView
                android:id="@+id/tv_items_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_items"
                android:textColor="#999999"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_base_total_items"
                android:layout_toLeftOf="@id/tv_items_make"
                android:text="@string/order_items"
                android:textColor="#999999"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal2"
            android:paddingLeft="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_total_price_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_total_price_lowercase"
                android:textColor="#999999"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_base_total_price"
                android:layout_toLeftOf="@id/tv_total_price_make"
                android:text="@string/order_total_price_lowercase"
                android:textColor="#999999"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal2"
            android:paddingLeft="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_base_sales_tax_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_total"
                android:textColor="#999999"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_base_sales_tax"
                android:layout_toLeftOf="@id/tv_base_sales_tax_title"
                android:text="@string/avg_total"
                android:textColor="#999999"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal2"
            android:paddingLeft="@dimen/padding_normal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padding_normal"
            android:paddingTop="@dimen/padding_normal2"
            android:paddingLeft="@dimen/padding_normal">

            <TextView
                android:id="@+id/ht_total_estimate_make"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_total_estimate"
                android:textColor="#999999"
                android:textSize="@dimen/text_small_body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/tv_base_total_estimate"
                android:layout_toLeftOf="@id/ht_total_estimate_make"
                android:text="@string/order_total_estimate"
                android:textColor="#0b8c15"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>