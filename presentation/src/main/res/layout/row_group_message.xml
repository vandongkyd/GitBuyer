<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_normal"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal">

    <ImageView
        android:id="@+id/imv_nav"
        android:src="@drawable/ic_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_marginRight="@dimen/padding_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imv_nav"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_avatar"
            android:layout_width="@dimen/iv_cover_height_small"
            android:layout_height="@dimen/iv_cover_height_small" />

        <LinearLayout
            android:layout_marginLeft="@dimen/padding_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time_last_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Jan 11, 2018"
                    android:textSize="@dimen/text_small_x_body" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_time_last_message"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dien An V."
                        android:textColor="#000"
                        android:textSize="@dimen/text_body" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_chat_order_number"
                    android:textColor="#000"
                    android:textSize="@dimen/text_body" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="#000"
                    android:textSize="@dimen/text_body" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_micro"
                android:text="You: Hi"
                android:textSize="@dimen/text_small_body" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>